<% include header %>
    <style>
        h2 {
            position: absolute;
            top: 25%;
            color: red;
        }
        
        div.form-group1 {
            margin-top: 21%;
        }
        
        div.form-group2 {
            margin-top: 1%;
        }
        
        label {
            color: white;
        }
    </style>

    <h2 style="color: red">Victima</h2>
    <form method="post" role="form">
        <div class="form-group1">
            <label for="title" style="color: white">Nombre</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Nombre" required/>
        </div>
        <div class="form-group2">
            <label for="body" style="color: white">Informacion</label>
            <textarea class="form-control" id="body" name="body" placeholder="Informacion" rows="3" required>
            </textarea>
        </div>
        <div class="form-group2">
            <input type="submit" class="btn-danger" value="Aceptar" />
        </div>
    </form>
    <% include footer %>